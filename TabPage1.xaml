<Page x:Class="GuWpfAdornersBug.TabPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GuWpfAdornersBug"
      xmlns:adorners="http://gu.se/Adorners"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TabPage1">
	<StackPanel Orientation="Vertical">
		<TextBlock>TabPage1</TextBlock>
		<TextBox
			adorners:Watermark.Text="Tab1..."
			adorners:Watermark.TextStyle="{StaticResource AdornerTextStyle}"
			adorners:Watermark.VisibleWhen="Empty">
		</TextBox>
	</StackPanel>
</Page>
